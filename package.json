{
	"name": "checkpoint",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"gateway",
		"services/*"
	],
	"scripts": {
		"types": "bun --filter '*' types",
		"typecheck": "tsc -b",
		"codecheck": "biome check --write",
		"test:all": "vitest",
		"test:all:cov": "vitest --coverage",
		"test:unit:all": "vitest test/unit",
		"test:gw": "vitest --project @checkpoint/gateway",
		"test:gw:cov": "vitest run --project @checkpoint/gateway --coverage --coverage.include=gateway/src",
		"test:id": "vitest --project @checkpoint/identity",
		"test:id:cov": "vitest run --project @checkpoint/identity --coverage --coverage.include=**/identity/src",
		"test:pass": "vitest --project @checkpoint/passport",
		"test:pass:cov": "vitest run --project @checkpoint/passport --coverage --coverage.include=**/passport/src",
		"test:unit:gw": "vitest --project @checkpoint/gateway test/unit",
		"test:unit:id": "vitest --project @checkpoint/identity test/unit test/setup",
		"test:unit:pass": "vitest --project @checkpoint/passport test/unit test/setup",
		"test:int:all": "vitest test/integration",
		"test:int:id": "vitest --project @checkpoint/identity test/integration",
		"test:int:pass": "vitest --project @checkpoint/passport test/integration"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.0",
		"@cloudflare/vite-plugin": "^1.5.0",
		"@cloudflare/vitest-pool-workers": "^0.8.41",
		"@std/path": "npm:@jsr/std__path@^1.0.8",
		"@types/node": "^22.15.30",
		"@vitest/coverage-istanbul": "~3.2.4",
		"drizzle-kit": "^0.31.1",
		"drizzle-orm": "^0.44.2",
		"sst": "^3.17.4",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vitest": "~3.2.3",
		"wrangler": "^4.18.0",
		"zod": "^3.25.56"
	}
}
