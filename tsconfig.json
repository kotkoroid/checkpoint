{
	"include": ["./*.ts"],
	"exclude": ["./*.config.ts"],
	"references": [
		{ "path": "./gateway" },
		{ "path": "./gateway/test" },
		{ "path": "./services/identity" },
		{ "path": "./services/identity/test" },
		{ "path": "./services/passport" },
		{ "path": "./services/passport/test" }
	],
	"compilerOptions": {
		"erasableSyntaxOnly": true,
		"esModuleInterop": true,
		"exactOptionalPropertyTypes": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noUncheckedIndexedAccess": true,
		"outDir": "./tsbuild",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"verbatimModuleSyntax": true
	}
}
